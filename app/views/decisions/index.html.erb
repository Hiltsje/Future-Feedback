<div class="col-lg-12">
  <h2> Add new key decision</h2>

  <%= form_for @decision_new, html: { class: "control-label" } do |f| %>
    <div class="form-group">
      <%= f.label :title, "Desicion", class: "" %>
      <%= f.text_field :title, class: "form-control"  %> <br/>
    </div>

    <div class="form-group">
      <%= f.label :forecast, class: "control-label" %>
      <%= f.text_area :forecast, class: "form-control" %> <br/>
    </div>

    <div class="form-group"><%= f.label :review_date %>:
      <%= f.date_select :review_date, :order => [:day, :month, :year], class: "form-control date-select" %> <br/>
    </div>

    <%= f.submit "create", class: "btn btn-success" %>
  <% end %>
</div>

<div class="row marketing">
  <div class="col-xs-6">
    <h2 class="">Last added</h2><hr> <br>
    <% @decisions.first(3).each do |decision| %>
      <h5>I decided to <%= decision.title %></h5>
      <p class="text-muted">Review date <%= decision.review_date %></p>
      <%= link_to "Edit", decision, class:"btn btn-primary" %>
      <hr>
    <% end %>
  </div>

  <div class="col-xs-6">
    <h2 class="">Next 2 review</h2><hr> <br>
    <% @decisions_review_list.first(3).each do |decision| %>
      <h5>I decided to <%= decision.title %></h5>
      <p class="text-muted">Review date <%= decision.review_date %></p>
      <%= link_to "Add outcome", decision, class:"btn btn-primary" %>
      <hr>
    <% end %>
  </div>
</div>


<!-- @ is for instance variables: created in the
controller and shared in the view.

Whenever you write do |decision| you create a
local variable in the block of code. -->
