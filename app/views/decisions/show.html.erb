<div class="row marketing">
    <div class="col-xs-12">
      <h3>I decided...</h3><h4> <%= @decision.title %></h4>
      <h3>The effect that i expect it to have is...</h3> <h4><%= @decision.forecast %></h4>
      <p>Review on <%= @decision.review_date %></p>
      <%= link_to "Delete", decision_path(@decision), method: :delete, data: { confirm: "Are you sure?"} ,class:"btn btn-danger" %>
      <%= link_to "Edit", edit_decision_path(@decision),class:"btn btn-warning" %>
    </div>

<!-- <%= render "outcomes/form" %>-->
    <div>
      <%if @decision.outcomes.length <= 1 %>
          <%= render "outcomes/form" %>
          <% else %>
            <%= render "outcomes/outcome" %>
      <% end %>
    </div>
</div>
